{
  "plugins": [
    "./opencode/plugins/grep-to-rg.ts",
    "./opencode/plugins/uv-enforcer.ts",
    "./opencode/plugins/auto-formatter.ts",
    "./opencode/plugins/conventional-commit-validator.ts",
    "./opencode/plugins/command-tracker.ts",
    "./opencode/plugins/session-tracker.ts",
    "./opencode/plugins/todo-extractor.ts",
    "./opencode/plugins/rm-protection.ts",
    "./opencode/plugins/test-runner.ts"
  ],
  "settings": {
    "auto_formatter": {
      "enabled": true,
      "formatters": {
        "python": "black",
        "javascript": "prettier",
        "typescript": "prettier",
        "go": "gofmt",
        "rust": "rustfmt"
      }
    },
    "uv_enforcer": {
      "enabled": true,
      "allow_escape_hatch": true
    },
    "commit_validator": {
      "enabled": true,
      "allow_alternative_format": true
    },
    "session_analytics": {
      "enabled": true,
      "track_all_tools": true,
      "database_path": "~/.opencode/analytics/"
    },
    "todo_extractor": {
      "enabled": true,
      "output_file": "TODOS_AUTOGENERATED.md",
      "priority_detection": true
    },
    "rm_protection": {
      "enabled": true,
      "audit_log": true,
      "trash_command": "auto"
    },
    "test_runner": {
      "enabled": true,
      "auto_run": true,
      "file_threshold": 3,
      "timeout": 120000
    }
  }
}
